<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentTimeline">

    <Button
        android:id="@+id/btnCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:backgroundTint="#23B8AA"
        android:text="GENERATE"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtWantToTake"
        app:layout_constraintStart_toEndOf="@+id/txtWantToTake"
        app:layout_constraintTop_toTopOf="@+id/txtWantToTake"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/txtWantToTake"
        android:layout_width="255dp"
        android:layout_height="68dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Please split courses with ,"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/takentimetable"
        android:layout_width="345dp"
        android:layout_height="179dp"
        android:layout_marginTop="48dp"
        android:text="Here you will see the recommended course timetable!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.378"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtWantToTake" />

</androidx.constraintlayout.widget.ConstraintLayout>