<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Coursestaken"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="Enter Taken Course"
        android:textColor="@color/black"
        android:textSize="26dp" />

    <Button
        android:id="@+id/btnadd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coursename"
        android:layout_marginTop="0dp"
        android:text="Add to your course list" />

    <Button
        android:id="@+id/btnedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnadd"
        android:text="Edit your course list" />

    <TextView
        android:id="@+id/coursesTaken"
        android:layout_width="340dp"
        android:layout_height="278dp"
        android:layout_below="@+id/btnadd"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="87dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="166dp"
        android:hint="Here you will see all the courses you have taken." />

    <EditText
        android:id="@+id/coursename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_marginTop="20dp"
        android:hint="Enter the Course you have taken"
        android:textSize="20dp" />


</RelativeLayout>